# Firebase Configuration
# Récupérez ces valeurs depuis la console Firebase (Project Settings > General > Your apps)

# Clé API de l'application Web Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here

# Domaine d'authentification (format: <project-id>.firebaseapp.com)
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com

# Identifiant du projet Firebase
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id

# Bucket Storage (format: <project-id>.appspot.com)
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com

# ID expéditeur Cloud Messaging
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id

# Identifiant unique de l'application (format: 1:<sender>:web:<id>)
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# (Optionnel) ID Analytics si Google Analytics est activé
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
